#!/bin/bash

# Default to psql if first argument is not a known Postgres binary
if [[ $# -eq 0 || "$1" == -* ]]; then
  set -- psql "$@"
fi

# If input is coming from a pipe or file, use -T to disable tty
if [[ ! -t 0 ]]; then
  docker compose exec -T postgres "$@"
else
  docker compose exec -it postgres "$@"
fi
